<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    tools:context=".Add_Point_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/backlyt"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bluecruve">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_arrow_back" />

        </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Points"
        android:textSize="25dp"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Point to add(Amount in )"
        android:id="@+id/etPoint"
        android:layout_margin="20dp"
        android:background="@drawable/whitebackgroundcruve"
        android:padding="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@null"
        android:background="@drawable/btndesign"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:text="Add Points"
        android:textAllCaps="false"
        android:id="@+id/pointsbtn"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:textSize="15dp"/>




</LinearLayout>