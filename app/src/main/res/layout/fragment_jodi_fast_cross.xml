<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.JodiFastCrossFragment">
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/whitecruve">

        <Spinner
            android:id="@+id/spinGame"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:entries="@array/selectgame" />

    </RelativeLayout>

    <Button
        android:layout_below="@+id/r1"
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/btndesign"
        android:text="Submit"
        android:textAllCaps="false"
        android:textSize="12dp"
        app:backgroundTint="@null" />

    <TextView
        android:id="@+id/tvWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSubmit"
        android:visibility="gone"
        android:background="@drawable/errorbackground"
        android:padding="5dp"
        android:paddingStart="20dp"
        android:text="Enter number like 10,15,20..."
        android:textColor="#FFFFFF"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@color/appblack"
        android:layout_below="@+id/tvWarning">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Number"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Points"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="10dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/l1" />


</RelativeLayout>