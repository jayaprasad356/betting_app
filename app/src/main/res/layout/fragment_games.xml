<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appblack"
    tools:context=".GamesFragment">

    <TextView
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Betting App"/>



    <LinearLayout
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:id="@+id/lytJodi"
                android:background="@drawable/whitebackgroundcruve"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_jodi"
                    android:background="@drawable/bg1"
                    android:padding="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="JODI"
                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/appblack"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:id="@+id/lytHaruf"
                android:background="@drawable/whitebackgroundcruve"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_haruf"
                    android:background="@drawable/bg2"
                    android:padding="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="HARUF"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:textColor="@color/appblack"
                    android:layout_gravity="center" />
            </LinearLayout>

        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:id="@+id/lytQuickcross"
            android:background="@drawable/whitebackgroundcruve"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_quick_cross"
                android:background="@drawable/bg3"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="QUICK CROSS"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:background="@drawable/whitebackgroundcruve"
            android:id="@+id/lytOddeven"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_odd_even"
                android:background="@drawable/bg4"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="ODD EVEN"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    </LinearLayout>





</RelativeLayout>